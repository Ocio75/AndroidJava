<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_opciones">

    <ImageButton
        android:id="@+id/ibCarta"
        android:layout_width="335dp"
        android:layout_height="340dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="328dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="335dp"
        android:layout_height="340dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="232dp"
        android:contentDescription="@string/appbar_scrolling_view_behavior"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ibBebidas"
        android:layout_width="335dp"
        android:layout_height="340dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="232dp"
        android:onClick="onClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btLogout"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="60dp"
        android:onClick="onClick"
        android:text="LogOut"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btTerminar"
        android:layout_width="332dp"
        android:layout_height="130dp"
        android:layout_marginStart="472dp"
        android:layout_marginBottom="68dp"
        android:onClick="onClick"
        android:text="Terminar"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btChat"
        android:layout_width="327dp"
        android:layout_height="98dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="523dp"
        android:layout_marginBottom="65dp"
        android:onClick="onClick"
        android:text="Chat"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/ibBebidas"
        app:layout_constraintEnd_toStartOf="@+id/btLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>